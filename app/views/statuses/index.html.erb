<div class="page-header"><h1>Statuses <small>List All</small></h1></div>

<button type="button" class="btn btn-default btn-lg"><%= link_to "New Status", new_status_path %></button><br><br>


<% @statuses.each do |status| %>


<div class="panel panel-default">

  <div class="panel-heading">
    <%= status.name %>
  </div>
  <div class="panel-body">
    <p class="lead">
      <%= status.status %>
    </p>

      
       <p class="text-left">
        <small>
          Posted <%= link_to time_ago_in_words(status.created_at) + " ago", status_path(status) %>. 
        </small>       
       </p>
         

          <div class="btn-group">
            <button type="button" class="btn btn-default btn-xs"><%= link_to "Edit", edit_status_path(status) %></button>

            <button type="button" class="btn btn-default btn-xs"><%= link_to "Delete", method: :delete, data: { confirm: "Sure?" } %></button>
         
          
        </div>

         


        
  </div>
</div>

<% end %>